<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="EstilosGlobales.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Name="EstiloPanelEncabezado" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="Background" Value="{StaticResource FondoGris}"></Setter>
    </Style>

    <Style x:Name="EstiloBotonMenu" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource FondoGris}"></Setter>
        <Setter Property="Foreground" Value="{StaticResource ColorFuente2}"></Setter>
        <Setter Property="Margin" Value="5"></Setter>
        <Setter Property="Padding" Value="10,5"></Setter>
        <Setter Property="FontSize" Value="15"></Setter>
    </Style>
</ResourceDictionary>
